@model IEnumerable<CRUDDemo.Models.Employee>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div>
    <table class="table">

            <th>@Html.DisplayNameFor(x=>x.Name)</th>
            <th>@Html.DisplayNameFor(x=>x.Email)</th>
            <th>@Html.DisplayNameFor(x=>x.Phone)</th>
            <th>@Html.DisplayNameFor(x=>x.Address)</th>
            <th>Actions</th>

            @foreach (var emp in Model)
            {
            <tr>
                <td>@Html.DisplayFor(x => emp.Name)</td>
                <td>@Html.DisplayFor(x => emp.Email)</td>
                <td>@Html.DisplayFor(x => emp.Phone)</td>
                <td>@Html.DisplayFor(x => emp.Address)</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = emp.EmployeeId }) |
                    @Html.ActionLink("Detail", "Detail", new { id = emp.EmployeeId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = emp.EmployeeId })
                </td>
            </tr>
            }
    </table>
</div>
